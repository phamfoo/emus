{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2018",
    "outDir": "lib",
    "rootDir": "src",
    "lib": ["ES2018", "dom"],
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules", "lib"]
}
